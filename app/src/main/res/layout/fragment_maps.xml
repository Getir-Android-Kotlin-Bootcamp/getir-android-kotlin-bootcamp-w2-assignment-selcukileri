<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/locationAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_search_category_default"
            android:hint="Where is your location"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="#8e918f"
            android:padding="8dp"
            android:textSize="16sp"  />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:backgroundTint="#8e918f"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"  android:padding="8dp"  />

    </LinearLayout>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Address will be displayed here"
        android:textSize="18sp"
        android:background="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="bottom" />

    <Button
        android:id="@+id/setLocationButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Set Location"
        android:backgroundTint="#BF1212"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:padding="15dp" />



</FrameLayout>